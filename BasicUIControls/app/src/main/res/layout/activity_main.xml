<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.k1967.basicuicontrols.MainActivity">

   <RadioGroup
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/myNiceRadioGroup"
       >
       <RadioButton
           android:id="@+id/radio0"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:checked="true"
           android:text="@string/radio_option_1"
           />
       <RadioButton
           android:id="@+id/radio1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:checked="false"
           android:text="@string/radio_option_2"
           />
       <RadioButton
           android:id="@+id/radio2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:checked="false"
           android:text="@string/radio_option_3"
           />
       <RadioButton
           android:id="@+id/radio3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:checked="false"
           android:text="@string/radio_option_4"
           />
       <RadioButton
           android:id="@+id/radio5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:checked="false"
           android:text="@string/radio_option_5"
           />
</RadioGroup>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/myNiceRadioGroup"
    android:id="@+id/newButton"
    android:text="@string/Select" />

<TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/newButton"
        android:id="@+id/resultText"
        android:background="@color/black"
        android:text="hello"
        android:textColor="@color/white"
        android:textAlignment="center"
/>
</android.support.constraint.ConstraintLayout>
